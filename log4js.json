{
  "appenders": {
    "out": { "type": "console" },
    "logfile": {
      "type": "file",
      "filename": "logfile.log"
    }
  },
  "categories": {
    "default": { "appenders": [ "out" ], "level": "info" },
    "app": { "appenders": [ "logfile", "out" ], "level": "info" },
    "server": { "appenders": [ "out" ], "level": "info" },
    "controller": { "appenders": [ "logfile", "out" ], "level": "info" }
  }
}
